{
  "name": "Storage Diff Viewer",
  "version": "1.0",
  "description": "Inspect the changes in storage",
  "permissions": ["background", "tabs", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": ["inject.js"],
  "devtools_page": "devtools.html",
  "manifest_version": 2
}
