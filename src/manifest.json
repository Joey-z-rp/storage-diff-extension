{
  "name": "Clear your session",
  "version": "1.0",
  "description": "Use Alt+R to clear your session and refresh the page",
  "permissions": ["background", "tabs", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "run_at": "document_start",
      "js": ["content.js"]
    }
  ],
  "commands": {
    "clear-session-storage": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Clear the session storage"
    }
  },
  "manifest_version": 2
}
