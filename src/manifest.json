{
  "name": "Session Helper",
  "version": "1.0",
  "description": "Use Alt+R to clear your session and refresh the page",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://127.0.0.1/*",
        "http://localhost/*",
        "https://nxi.secure.budgetdirect.com.au/*",
        "https://nxq.secure.budgetdirect.com.au/"
      ],
      "run_at": "document_start",
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": ["inject.js"],
  "devtools_page": "devtools.html",
  "commands": {
    "clear-session-storage": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Clear the session storage"
    }
  },
  "manifest_version": 2
}
